{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HardBrake",
  "version": "0.1.0",
  "identifier": "com.hardbrake.desktop",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "HardBrake",
        "width": 900,
        "height": 650,
        "resizable": true,
        "center": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "externalBin": ["binaries/hardbrake-core"],
    "createUpdaterArtifacts": "v1Compatible"
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERDMzJCMTVCQzE4NzdCNEYKUldSUGU0ZkJXN0V5M0lOUFk1dmFRQS84Q1B2b2tTamhQdlJrUFVsaFo3cllxU1prakg4ZmZqcVUK",
      "endpoints": ["https://github.com/tahsinature/hardbrake/releases/latest/download/latest.json"],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
