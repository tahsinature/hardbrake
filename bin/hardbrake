#!/usr/bin/env bun

import meow from "meow";

const cli = meow(
  `
Usage
  $ hardbrake --help
  Options
    --help  Show this help message
    --version Show the version
  `,
  {
    importMeta: import.meta,
    allowUnknownFlags: false,
    flags: {
      help: {
        type: "boolean",
        alias: "h",
      },
      version: {
        type: "boolean",
        alias: "v",
      },
    },
  }
);

import hardbrake from "../src/index";

await hardbrake();
